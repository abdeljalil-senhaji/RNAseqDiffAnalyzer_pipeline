rule count_info:
    input:
        inputPath="{prefix}/{sample}/{sample}_{fungi_parasite}_extractInfo_fun_par.txt"
    output:
        outputPath="{prefix}/{sample}/{sample}_{fungi_parasite}_count.txt"
    log:
        "{prefix}/{sample}/logs/{sample}_{fungi_parasite}_count.log"
    params:
        script = config["script_pip"]["count"]
    run:
       if (os.stat(input.inputPath).st_size == 0 ):
         shell("touch {output.outputPath}")
       else:
         shell('bash {params.script} -i {input.inputPath} -o {output.outputPath}  | tee -a {log}')
